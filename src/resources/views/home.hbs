<div class="container mx-auto px-14">
    <ul
        class="grid gird-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-3 gap-y-6 lg:gap-y-12 lg:gap-x-6 mt-8">
        {{#each courses}}
        <a class="shadow-lg p-8 rounded-2xl bg-white" href="/courses/{{this.slug}}">
            <div class="aspect-video">
                <img class="w-full h-full object-cover rounded-2xl" src="{{this.image}}"
                    alt="img" />
            </div>
            <h2 class="line-clamp-1 mt-2 tracking-tight font-bold text-lg text-neutral-700">
                {{this.name}}
            </h2>
            <p class="line-clamp-2 text-neutral-500 mt-2">
                {{this.description}}
            </p>
            <div class="">
                <button
                    class="rounded-lg w-full bg-blue-600 hover:bg-blue-700 text-white p-2 mt-4">Learn
                    now</button>
            </div>
        </a>
        {{/each}}
    </ul>
</div>